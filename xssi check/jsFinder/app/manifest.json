{
  "manifest_version": 2,
  "name": "JS Finder",
  "description": "Make the current page red",
  "version": "2.0",

  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "/img/icon.png",
    "default_title": "Read the js of current page"
    //"default_popup": "popup.html"
  },
  "permissions": [
    "*://*/*",
    "activeTab"
  ]
